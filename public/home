<script type="text/javascript">

    function getSlide(action, num){
        var change = true; 
        var oldImg;
        var newImg; 

        oldImg = $('#clothingPictures img.sel').attr('id');
        oldImg = oldImg.substr(8,oldImg.length);


        if (action == 'prev'){
            if (parseInt(oldImg) ==1){
                change = false; 
            }
            else{
              newImg = parseInt(oldImg) - 1;  
            }    
        }
        else if (action == 'next'){
            if (parseInt(oldImg) == 8){
                change = false; 
            }
            else{
              newImg = parseInt(oldImg)+ 1;  
            }     
        }
        else{
            newImg = num;
        }

        if (change){
            
            $('#clothing' + oldImg).fadeOut(400, function(){$('#clothing' + newImg).fadeIn(500);} );
            $('#circle' + oldImg).removeClass('selected');
            $('#clothing' + oldImg).removeClass('sel');
            $('#clothing' + newImg).addClass('sel');
            $('#circle' + newImg).addClass('selected');
        }
    }

</script>


